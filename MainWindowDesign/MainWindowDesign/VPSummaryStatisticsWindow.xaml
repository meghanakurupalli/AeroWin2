            <Grid Height="50">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <Rectangle Grid.Row="0" Grid.Column="0" Fill="#D3D3D3" Margin="4 2 2 2"></Rectangle>
                <Rectangle Grid.Row="0" Grid.Column="1" Fill="#D3D3D3" Margin="2 2 2 2"></Rectangle>
                <Rectangle Grid.Row="0" Grid.Column="2" Fill="#D3D3D3" Margin="2 2 4 2"></Rectangle>

                <Label Grid.Row="0" Grid.Column="0" Content="Statistic" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="DemiBold"></Label>
                <Label Grid.Row="0" Grid.Column="1" Content="Mean" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="DemiBold"></Label>
                <Label Grid.Row="0" Grid.Column="2" Content="Std.Dev" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="DemiBold"></Label>
            </Grid >
            <Grid Height =" 160" Margin="0 2 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions >
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    
                </Grid.RowDefinitions>
                <Rectangle Grid.Row="0" Grid.Column="0" Fill="#DcdcdC" Margin="4 2 2 2"></Rectangle>
                <Rectangle Grid.Row="1" Grid.Column="0" Fill="#DcdcdC" Margin="4 2 2 2"></Rectangle>
                <Rectangle Grid.Row="2" Grid.Column="0" Fill="#DcdcdC" Margin="4 2 2 2"></Rectangle>
                

                <Rectangle Grid.Row="0" Grid.Column="1" Fill="#f5f5f5" Margin="2 2 2 2"></Rectangle>
                <Rectangle Grid.Row="1" Grid.Column="1" Fill="#f5f5f5" Margin="2 2 2 2"></Rectangle>
                <Rectangle Grid.Row="2" Grid.Column="1" Fill="#f5f5f5" Margin="2 2 2 2"></Rectangle>
                

                <Rectangle Grid.Row="0" Grid.Column="2" Fill="#f5f5f5" Margin="2 2 4 2"></Rectangle>
                <Rectangle Grid.Row="1" Grid.Column="2" Fill="#f5f5f5" Margin="2 2 4 2"></Rectangle>
                <Rectangle Grid.Row="2" Grid.Column="2" Fill="#f5f5f5" Margin="2 2 4 2"></Rectangle>
                

                <Label Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Air Pressure(Peaks)" FontWeight="DemiBold" FontSize="15"></Label>
                <Label Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Air Flow(at PressurePeaks)" FontWeight="DemiBold" FontSize="15"></Label>
                <Label Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Resistance" FontWeight="DemiBold" FontSize="15"></Label>
                

                <TextBlock Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="-" FontSize="15" Name="airPressureMean"></TextBlock>
                <TextBlock Grid.Row="0" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="-" FontSize="15" Name="airPressureSD"></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="-" FontSize="15" Name="airFlowMean"></TextBlock>
                <TextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="-" FontSize="15" Name="airFlowSD"></TextBlock>
                <TextBlock Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Text="-" FontSize="15" Name="resistanceMean"></TextBlock>
                <TextBlock Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Text="-" FontSize="15" Name="resistanceSD"></TextBlock>
                
            </Grid>
            <Grid Margin="0 2 0 0" Height="45">
                <Rectangle Fill="#dcdcdc" Margin="4 2 4 2"></Rectangle>
                <Label Content="Total Number of Points : " HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="15" FontWeight="DemiBold"></Label>
                <Label x:Name="NumberofPoints" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" FontWeight="DemiBold" Margin="-95 0 0 0" Content="-"></Label>
            </Grid>



        </StackPanel>
    </Border>
</Window>
