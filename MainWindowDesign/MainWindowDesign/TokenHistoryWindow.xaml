<Window x:Class="MainWindowDesign.TokenHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="TokenHistoryWindow" Height="300" Width="500">
    <StackPanel Height="250" VerticalAlignment="Top">
        <DataGrid Height="200" x:Name="TokenHistoryGrid" SelectionUnit="FullRow">

        </DataGrid>
        <Grid Height="50" Margin="2 2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Width="100" Background="LightGray" Foreground="Black" Content="Previous" x:Name="THWPreviousButton" BorderBrush="Black" BorderThickness="0.5" Click="THWPreviousButton_Click"></Button>
            <Button Grid.Column="1" Width="100" Background="LightGray" Foreground="Black" Content="Next" x:Name="THWNextButton" BorderBrush="Black" BorderThickness="0.5" Click="THWNextButton_Click"></Button>
        </Grid>
    </StackPanel>
</Window>
